{
  "packages": [
    "rustup@latest",
    "nodejs@latest",
    "fermyon-spin@latest",
    "natscli@latest",
    "nsc@latest",
    "nats-top@latest",
    "path:flakes/ory-cli"
  ],
  "env": {
    "PROJECT_DIR": "$PWD"
  },
  "shell": {
    "init_hook": [
      "source config/set-env.sh",
      "rustup default stable",
      "rustup target add wasm32-wasi",
      "cargo fetch",
      "npm install",
      "spin plugins update",
      "spin templates install --git https://github.com/fermyon/spin --update"
    ],
    "scripts": {
      "build": "cargo build",
      "build-docs": "cargo doc",
      "run": "cargo run",
      "test": [
        "cargo test -- --show-output"
      ]
    }
  }
}